<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
           fx:controller="WisdomBites.controller.HomePageController"
           prefWidth="900" prefHeight="650"
           style="-fx-background-color: #efddbb;">

    <!-- TOP NAV BAR -->
    <HBox spacing="20" alignment="CENTER_LEFT"
          prefHeight="50"
          maxHeight="50"
          style="-fx-background-color: #fdd28e; -fx-padding: 0 20; -fx-border-color: #d8b36c; -fx-border-width: 0 0 1 0;"
          StackPane.alignment="TOP_CENTER">

        <!-- App Name -->
        <Label text="Wisdom Bites"
               style="-fx-font-size: 20px; -fx-text-fill: #5a3921; -fx-font-weight: bold;" />

        <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>

        <!-- Date & Time -->
        <Label fx:id="navDateTime"
               style="-fx-font-size: 16px; -fx-text-fill: #5a3921; -fx-font-family: monospace;" />
    </HBox>


    <VBox spacing="30" alignment="CENTER" StackPane.alignment="CENTER">

        <VBox spacing="5" alignment="CENTER">
            <Label fx:id="welcomeLabel" style="
           -fx-text-fill: #5a3921;
           -fx-font-size: 28px;
           -fx-font-weight: bold;
           -fx-font-family: 'Segoe UI', monospace, monospace;
           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0.5, 0, 1);
           -fx-padding: 0 0 5 0;
       "/>

            <Label text="Letâ€™s keep your learning streak alive :)"
                   style="-fx-font-size: 16px;
                  -fx-text-fill: #5a3921;
                  -fx-font-family: 'Segoe UI', sans-serif;" />
        </VBox>

        <!-- Top buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="predictionsButton" text="My Predictions"
                    prefWidth="180"
                    style="-fx-background-color: #fdd28e;
                    -fx-text-fill: #5a3921;
                    -fx-background-radius: 20;
                    -fx-font-size: 18px;
                    "/>

            <Button fx:id="todoButton" text="To-Do List"
                    prefWidth="180"
                    style="
                    -fx-background-color: #fdd28e;
                    -fx-text-fill: #5a3921;
                    -fx-background-radius: 20;
                    -fx-font-size: 18px;
                    "/>

            <Button fx:id="syllabusButton" text="Syllabus Manager"
                    prefWidth="180"
                    style="
                    -fx-background-color: #fdd28e;
                    -fx-text-fill: #5a3921;
                    -fx-background-radius: 20;
                    -fx-font-size: 18px;
                    "/>

        </HBox>

        <!-- Fortune cookie image -->
        <ImageView fx:id="cookieImage" fitWidth="180" preserveRatio="true" />

        <!-- Get Your Fortune Button -->
        <Button fx:id="fortuneButton" text="Get your cookie!"
                prefWidth="180"
                style="-fx-background-color: #fdd28e;
                -fx-text-fill: #5a3921;
                -fx-background-radius: 20;
                -fx-font-size: 18px;
                "/>

        <!-- Bottom buttons -->
        <HBox spacing="30" alignment="CENTER">
            <Button fx:id="studyTrackerButton" text="Study Tracker"
                    prefWidth="180"
                    style="
                    -fx-background-color: #fdd28e;
                    -fx-text-fill: #5a3921;
                    -fx-background-radius: 20;
                    -fx-font-size: 18px;
                    "/>

            <Button fx:id="dailyTipButton" text="Daily Tip"
                    prefWidth="180"
                    style="
                    -fx-background-color: #fdd28e;
                    -fx-text-fill: #5a3921;
                    -fx-background-radius: 20;
                    -fx-font-size: 18px;
                    "/>

            <Button fx:id="logOutButton" text="log out!"
                    prefWidth="180"
                    style="
                    -fx-background-color: #fdd28e;
                    -fx-text-fill: #5a3921;
                    -fx-background-radius: 20;
                    -fx-font-size: 18px;
                    "/>
        </HBox>

    </VBox>
</StackPane>
