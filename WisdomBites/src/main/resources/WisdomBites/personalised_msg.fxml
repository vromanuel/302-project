<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="WisdomBites.controller.PersonalisedMsg"
            prefWidth="1600" prefHeight="900"
            style="-fx-background-color: #f5e1c0;">

    <!-- Top section with plain Back button -->
    <top>
        <HBox alignment="TOP_LEFT" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="backButton" text="Back" onAction="#handleBack"
                    style="-fx-background-color: #fdd28e;
               -fx-background-radius: 20;
               -fx-font-size: 16px;
               -fx-padding: 5 15;
               -fx-text-fill: black;" />
        </HBox>
    </top>

    <!-- Center content -->
    <center>
        <VBox spacing="40" alignment="TOP_CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="Predictions"
                   style="-fx-font-size: 36px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #5a3921;
                          -fx-font-family: 'Segoe UI', sans-serif;" />

            <ImageView fx:id="cookieImage"
                       fitWidth="200"
                       preserveRatio="true"
                       style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0.3, 0, 2);" />

            <TextArea fx:id="predictionBox"
                      editable="false"
                      wrapText="true"
                      prefWidth="500"
                      prefHeight="120"
                      style="-fx-background-color: white;
                             -fx-border-color: black;
                             -fx-border-width: 2;
                             -fx-font-size: 18px;
                             -fx-text-fill: black;
                             -fx-padding: 15;
                             -fx-font-family: 'Segoe UI', sans-serif;" />

            <Button text="Generate Message"
                    onAction="#handleGenerate"
                    style="-fx-background-color: #fdd28e;
                           -fx-background-radius: 20;
                           -fx-font-size: 20px;
                           -fx-font-weight: bold;
                           -fx-padding: 10 25;
                           -fx-text-fill: black;" />
        </VBox>
    </center>
</BorderPane>
