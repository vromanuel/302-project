<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="WisdomBites.controller.PersonalisedMsg"
            prefWidth="1600" prefHeight="900"
            style="-fx-background-color: #f5e1c0;">

    <!-- Top section with Back button + title -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 20;">
            <Button fx:id="backButton" text="â† Back" onAction="#handleBack"
                    style="-fx-background-color: #fdd28e;
                       -fx-background-radius: 20;
                       -fx-font-size: 16px;
                       -fx-padding: 5 15;
                       -fx-text-fill: black;" />

            <Label text="Predictions"
                   style="-fx-font-size: 24px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #5a3921;" />
        </HBox>
    </top>


    <!-- Centre content -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            <TextField fx:id="nameField"
                       promptText="Enter your name"
                       style="-fx-font-size: 16px;
                          -fx-padding: 10;
                          -fx-border-color: #5a3921;
                          -fx-border-width: 1;" />

            <TextField fx:id="subjectField"
                       promptText="Enter subject (e.g., CAB302: Software Development)"
                       style="-fx-font-size: 16px;
                          -fx-padding: 10;
                          -fx-border-color: #5a3921;
                          -fx-border-width: 1;" />

            <TextArea fx:id="predictionBox"
                      editable="false"
                      wrapText="true"
                      prefWidth="800"
                      prefHeight="600"
                      style="-fx-background-color: white;
                             -fx-border-color: #5a3921;
                             -fx-border-width: 2;
                             -fx-font-size: 18px;
                             -fx-text-fill: black;
                             -fx-padding: 15;
                             -fx-font-family: 'Segoe UI', sans-serif;" />

            <Button text="Generate Message"
                    onAction="#handleGenerate"
                    style="-fx-background-color: #fdd28e;
                           -fx-background-radius: 20;
                           -fx-font-size: 20px;
                           -fx-font-weight: bold;
                           -fx-padding: 10 25;
                           -fx-text-fill: #5a3921;" />
        </VBox>
    </center>
</BorderPane>
